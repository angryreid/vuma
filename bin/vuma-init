#!/usr/bin/env node

const inquirer = require("inquirer");
const logger = require("../lib/logger.js");
const utils = require("../lib/utils.js");
const CONSTANTS = require("../lib/constants.js");
const exec = require("child_process").exec;
const _global = {};

/**
 * settings
 */
const questions = {
  type: "input",
  message: "在当前目录初始化前端目录（fe）？",
  name: "ok",
  default: "fe",
};

function ask() {
  inquirer.prompt(questions).then((answers) => {
    if (answers.ok) {
      _global.proj_name = answers.ok;
      run();
    }
  });
}

utils
  .isLatestVersion()
  .then(() => {
    ask();
  })
  .catch(ask);

function run() {
  exec("ls | grep ^" + _global.proj_name + "$", (error, stdout, stderr) => {
    if (stdout) {
      logger.fatal(`该项目已存在，请删除目录下${_global.proj_name}`);
    } else {
      execInit();
    }
  });
}

function execInit() {
  exec(
    "cp -r " + CONSTANTS.FRAMEWORK_PATH + " " + _global.proj_name,
    (error) => {
      if (error) {
        logger.fatal("复制项目初始目录失败，请检查");
      } else {
        logger.success(
          `已初始化成功! 请执行\n cd ${_global.proj_name} ; vuma start;`
        );
      }
    }
  );
}
